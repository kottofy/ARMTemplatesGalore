{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefixName": {
            "type": "string",
            "defaultValue": "jber",
            "metadata": {
                "description": "The prefix for all resources created here."
            }
        },
        "databricksWorkspaceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Databricks workspace to create."
            }
        },
        "databricksPricingTier": {
            "type": "string",
            "defaultValue": "standard",
            "allowedValues": [
                "standard",
                "premium"
            ],
            "metadata": {
                "description": "The pricing tier of the Azure Databricks workspace."
            }
        },
        "appinsightsName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Application Insights resource to create."
            }
        },
        "storageAccountName1": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "storageAccountName2": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "storageAccountName3": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "storageAccountName4": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "storageAccountName5": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "storageAccountName6": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create."
            }
        },
        "functionStorageAccountName": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create for the function."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "[concat('dev', uniquestring('storage'))]",
            "metadata": {
                "description": "The name of the Azure Storage Account to create for the function."
            }
        },
        "storageAccountPricingTier": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "The pricing tier of the Azure Storage Account."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "storageAccountSku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Basic",
            "metadata": {
                "description": "The pricing tier for the hosting plan."
            }
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0",
            "metadata": {
                "description": "The instance size of the hosting plan (small, medium, or large)."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "dataFactoryName": {
            "type": "string",
            "metadata": {
                "description": "Name of the data factory. Must be globally unique."
            }
        },
        "dataFactoryLocation": {
            "type": "string",
            "allowedValues": [
                "East US",
                "East US 2",
                "West Europe"
            ],
            "defaultValue": "East US",
            "metadata": {
                "description": "Location of the data factory. Currently, only East US, East US 2, and West Europe are supported. "
            }
        },
        "webAppName": {
            "type": "string",
            "defaultValue": "[concat('site', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The site name. To use the default value, do not specify a new value."
            }
        },
        "webAppHostingPlanName": {
            "type": "string",
            "defaultValue": "[concat('plan' uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The host name. To use the default value, do not specify a new value."
            }
        },
        "webAppSku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "defaultValue": "B1",
            "metadata": {
                "description": "The pricing tier for the hosting plan."
            }
        },
        "functionAppHostingPlanName": {
            "type": "string",
            "defaultValue": "[concat('plan' uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The host name. To use the default value, do not specify a new value."
            }
        },
        "funcAppSku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "defaultValue": "B1",
            "metadata": {
                "description": "The pricing tier for the hosting plan."
            }
        }
    },
    "variables": {
        "managedResourceGroupName": "[concat(parameters('prefixName'), parameters('databricksWorkspaceName'), uniqueString(parameters('databricksWorkspaceName'), resourceGroup().id))]",
        "functionAppName": "[concat(parameters('prefixName'), parameters('functionAppName'))]",
        "functionStorageName": "[concat(parameters('prefixName'), parameters('functionStorageAccountName'))]",
        "webAppHostingPlanName": "[concat(parameters('prefixName'), parameters('webAppHostingPlanName'))]",
        "functionAppHostingPlanName": "[concat(parameters('prefixName'), parameters('functionAppHostingPlanName'))]",
        "dataFactoryName": "[concat(parameters('prefixName'), parameters('dataFactoryName'))]",
        "webAppName": "[concat(parameters('prefixName'), parameters('webAppName'))]"
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[parameters('webAppHostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "sku": {
              "name": "[parameters('webAppSku')]",
              "capacity": "[parameters('workerSize')]"
            },
            "properties": {
              "name": "[parameters('webAppHostingPlanName')]"
            }
          },
          {
            "apiVersion": "2015-08-01",
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[resourceId('Microsoft.Web/serverfarms', parameters('webAppHostingPlanName'))]"
            ],
            "properties": {
              "serverFarmId": "[parameters('webAppHostingPlanName')]"
            },
            "resources": [
              {
                "apiVersion": "2015-08-01",
                "name": "web",
                "type": "config",
                "dependsOn": [
                  "[resourceId('Microsoft.Web/Sites', parameters('webAppName'))]"
                ],
                "properties": {}
              }
            ]
          }
        
    ],
    "outputs": {}
}